{
    "name": "slim-node-server",
    "version": "1.0.5",
    "description": "Simple and slim Node.js HTTP server",
    "keywords": [
        "http-server",
        "slim framework",
        "framework"
    ],
    "main": "dist/simple.class.js",
    "scripts": {
        "prepublish": "npm build",
        "build": "tsc",
        "build:watch": "tsc -w",
        "postbuild": "bundle-js dist/simple.class.js -o dist/bundle.js && npx minify dist/bundle.js > dist/bundle.min.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jakecyr/simple-nodejs-server.git"
    },
    "author": "Jake Cyr",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jakecyr/simple-nodejs-server/issues"
    },
    "homepage": "https://github.com/jakecyr/simple-nodejs-server#readme",
    "devDependencies": {
        "@types/node": "^12.12.20",
        "@types/qs": "^6.9.0",
        "bundle-js": "^1.0.3",
        "minify": "^5.0.0"
    }
}
